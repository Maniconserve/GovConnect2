@model Citizen
@inject UserManager<Citizen> citizenManager
<head>
    <title>Profile</title>
</head>
<body>
    <div class="mb-3 container min-vh-100 row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Profile</h3>
                </div>

                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-start align-items-center" role="alert">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    }

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <!-- Profile Picture Upload -->
                        @{
                            string imageSrc = "~/Images/Elon.png";
                            var username = User.Identity.Name;
                            var user = await citizenManager.GetUserAsync(User);
                            @if (user != null && user.Profilepic != null && user.Profilepic.Length > 0)
                            {
                                var base64String = Convert.ToBase64String(user.Profilepic);
                                imageSrc = $"data:image/jpeg;base64,{base64String}";
                            }
                        }

                        <div class="text-center mb-4">
                            <img id="profilePicPreview" src="@imageSrc" alt="Profile Picture" class="profile-img rounded-circle" style="width: 100px; height: 130px; object-fit: cover;" />
                            <div class="mt-2">
                                <!-- Custom Upload Button -->
                                <button type="button" class="btn btn-secondary" id="uploadButton">Upload</button>
                                <!-- Hidden File Input -->
                                <input type="file" id="Profilepic" name="Profilepic" class="form-control visually-hidden" asp-for="Profilepic" />
                            </div>
                        </div>

                        <!-- Name Fields -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="FirstName" class="form-label">First Name</label>
                                    <input type="text" id="FirstName" name="UserName" class="form-control" placeholder="Enter First Name" asp-for="UserName" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.UserName)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="LastName" class="form-label">Last Name</label>
                                    <input type="text" id="LastName" name="LastName" class="form-control" placeholder="Enter Last Name" asp-for="LastName" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Gender and Phone Number Fields -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Gender" class="form-label">Gender</label>
                                    <select id="Gender" name="Gender" class="form-select" asp-for="Gender">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Gender)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="PhoneNumber" class="form-label">Mobile</label>
                                    <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Enter Mobile Number" asp-for="PhoneNumber" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Address Fields -->
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="Pincode" class="form-label">Pincode</label>
                                    <input type="text" id="Pincode" name="Pincode" class="form-control" placeholder="Enter Pincode" asp-for="Pincode" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Pincode)</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="Mandal" class="form-label">Mandal</label>
                                    <input type="text" id="Mandal" name="Mandal" class="form-control" placeholder="Enter Mandal" asp-for="Mandal" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Mandal)</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="District" class="form-label">District</label>
                                    <input type="text" id="District" name="District" class="form-control" placeholder="Enter District" asp-for="District" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.District)</span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="City" class="form-label">City</label>
                                    <input type="text" id="City" name="City" class="form-control" placeholder="Enter City" asp-for="City" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.City)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Village" class="form-label">Village</label>
                                    <input type="text" id="Village" name="Village" class="form-control" placeholder="Enter Village" asp-for="Village" />
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Village)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="form-group">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter Email" asp-for="Email" />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const uploadButton = document.getElementById("uploadButton");
        const fileInput = document.getElementById("Profilepic");
        uploadButton.addEventListener("click", function () {
            fileInput.click();
        });
        fileInput.addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onloadend = function () {
                    document.getElementById("profilePicPreview").src = reader.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
