@model Grievance
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lodge a Grievance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f9fc;
        }

        .grievance-form-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .grievance-form-container h2 {
                text-align: center;
                color: #4CAF50;
            }

        .form-group label {
            font-weight: bold;
        }

        .submit-btn {
            background-color: #4CAF50;
            border-color: #4CAF50;
            color: #fff;
            font-weight: bold;
            padding: 12px 20px;
            width: 100%;
        }

            .submit-btn:hover {
                background-color: #45a049;
                border-color: #45a049;
                cursor: pointer;
            }

        .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px #e2e2e2;
        }

        .form-control {
            border-radius: 8px;
        }

        .file-upload-btn {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
        }

            .file-upload-btn:hover {
                background-color: #e2e2e2;
                cursor: pointer;
            }

        .form-check-label {
            font-weight: normal;
        }
    </style>
</head>
<body>

    <div class="grievance-form-container">
        <h2>Lodge a Grievance</h2>

        <!-- Alert for Grievance ID -->
        @if (TempData["GrievanceID"] != null)
        {
            <div class="alert alert-success" role="alert">
                Your Grievance ID is <strong>@TempData["GrievanceID"]</strong>. Please keep it safe to track your grievance status.
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="form-group mb-4">
                <label for="Title">Grievance Title <span class="text-danger">*</span></label>
                <input asp-for="Title" class="form-control" id="Title" placeholder="Enter the title of your grievance" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Department Selection -->
            <div class="form-group mb-4">
                <label for="Department">Select Department <span class="text-danger">*</span></label>
                <select asp-for="DepartmentID" class="form-select form-control" id="Department">
                    <option value="" disabled selected>Select Department</option>
                    <option value="1">Police</option>
                    <option value="2">Revenue</option>
                    <option value="3">Municipal</option>
                    <option value="4">Education</option>
                </select>
                <span asp-validation-for="DepartmentID" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-4">
                <label for="Description">Describe Your Grievance <span class="text-danger">*</span></label>
                <textarea asp-for="Description" class="form-control" id="Description" rows="5" placeholder="Provide detailed description of the grievance"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- File Upload -->
            <div class="form-group mb-4">
                <label for="FileUpload">Attach a PDF File (Optional)</label>
                <input type="file" class="form-control file-upload-btn" id="FileUpload" name="fileUpload" accept=".pdf" />
            </div>

            <!-- Consent Checkbox -->
            <div class="form-group form-check mb-4">
                <input type="checkbox" class="form-check-input" id="Consent" required />
                <label class="form-check-label" for="Consent">I agree to the terms and conditions <span class="text-danger">*</span></label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn submit-btn">Submit Grievance</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
