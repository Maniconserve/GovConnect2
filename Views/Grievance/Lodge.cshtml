@model Grievance
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Lodge a Grievance</title>
	<link href="~/css/lodge.css" rel="stylesheet" />
</head>
<body>

	<div class="grievance-form-container">
		<h2>Lodge a Grievance</h2>

		@if (TempData["GrievanceID"] != null)
		{
			<div class="alert alert-success" role="alert">
				Your Grievance ID is <strong>@TempData["GrievanceID"]</strong>. Please keep it safe to track your grievance status.
			</div>
		}

		<form method="post" enctype="multipart/form-data">
			<div class="form-group mb-4">
				<label for="Title">Grievance Title <span class="text-danger">*</span></label>
				<input asp-for="Title" class="form-control" id="Title" placeholder="Enter the title of your grievance" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group mb-4">
				<label for="Department">Select Department <span class="text-danger">*</span></label>
				<select asp-for="DepartmentID" class="form-select form-control" id="Department">
					<option value="" disabled selected>Select Department</option>
					<option value="1">Police</option>
					<option value="2">Revenue</option>
					<option value="3">Municipal</option>
					<option value="4">Education</option>
				</select>
				<span asp-validation-for="DepartmentID" class="text-danger"></span>
			</div>

			<div class="form-group mb-4">
				<label for="Description">Describe Your Grievance <span class="text-danger">*</span></label>
				<textarea asp-for="Description" class="form-control" id="Description" rows="5" placeholder="Provide detailed description of the grievance"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group mb-4">
				<label for="FileUpload">Attach a PDF File</label>
				<input type="file" class="form-control file-upload-btn" id="FileUpload" name="fileUpload" accept=".pdf" />
			</div>

			<div class="form-group form-check mb-4">
				<input type="checkbox" class="form-check-input" id="Consent" required />
				<label class="form-check-label" for="Consent">I agree to the terms and conditions <span class="text-danger">*</span></label>
			</div>

			<button type="submit" class="btn submit-btn">Submit Grievance</button>
		</form>
	</div>
</body>
</html>
