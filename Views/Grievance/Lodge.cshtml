@model Grievance
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Lodge a Grievance</title>
</head>
<body>

	<div class="grievance-form-container">
		<h2>Lodge a Grievance</h2>

		@if (TempData["GrievanceID"] != null)
		{
			<div class="alert alert-success" role="alert">
				Your Grievance ID is <strong>@TempData["GrievanceID"]</strong>. Please keep it safe to track your grievance status.
			</div>
		}

		<form method="post" enctype="multipart/form-data">
			<div class="form-group mb-4">
				<label for="grievance-Title">Grievance Title <span class="text-danger">*</span></label>
				<input asp-for="Title" class="form-control grievance-input" id="grievance-Title" placeholder="Enter the title of your grievance" required />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group mb-4">
				<label for="grievance-Department">Select Department <span class="text-danger">*</span></label>
				<select asp-for="DepartmentID" class="form-select form-control grievance-select" id="grievance-Department" required>
					<option value="" disabled selected>Select Department</option>
					<option value="4">Police</option>
					<option value="2">Revenue</option>
					<option value="5">Municipal</option>
					<option value="3">Dept Of Food & Supplies</option>
				</select>
				<span asp-validation-for="DepartmentID" class="text-danger"></span>
			</div>

			<div class="form-group mb-4">
				<label for="grievance-Description">Describe Your Grievance <span class="text-danger">*</span></label>
				<textarea asp-for="Description" class="form-control grievance-textarea" id="grievance-Description" rows="5" placeholder="Provide detailed description of the grievance" required></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group mb-4">
				<label for="grievance-FileUpload">Attach a PDF File</label>
				<input type="file" class="form-control grievance-file-upload-btn" id="grievance-FileUpload" name="files" accept=".pdf" multiple/>
			</div>

			<div class="form-group form-check mb-4">
				<input type="checkbox" class="form-check-input grievance-consent" id="grievance-Consent" required />
				<label class="form-check-label" for="grievance-Consent">I agree to the terms and conditions <span class="text-danger">*</span></label>
			</div>

			<button type="submit" class="btn grievance-submit-btn" style="background-color:#4CAF50;border-color: #4CAF50;color: #fff;">Submit Grievance</button>
		</form>
	</div>
</body>
</html>
