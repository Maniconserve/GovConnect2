@model IEnumerable<Grievance>
@{
    Layout = "_Gov_Layout";
}

<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="max-w-4xl mx-auto p-8 min-vh-100">
        <!-- Header Section -->
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-xl font-bold">My Grievances</h1>
             <form method="get" action="/Grievance/MyGrievances"> <!-- Adjust the action URL -->
            <select name="statusFilter" class="border border-gray-300 rounded p-2" onchange="this.form.submit()">
                <option value="">All</option>
                <option value="In Progress">In Progress</option>
                <option value="Resolved">Resolved</option>
                <option value="Pending">Pending</option>
            </select>
        </form>
        </div>

        <!-- Grievances List -->
        <div class="bg-gray-200 p-4 rounded-lg space-y-4">
            @if (Model != null && Model.Any())
            {
                foreach (var grievance in Model)
                {
                    <div class="bg-gray-400 p-4 rounded-lg">
                        <a href="@Url.Action("Details", "Grievance", new { id = grievance.GrievanceID })">
                            <div class="flex justify-between">
                            <div>
                                <p class="font-bold">Title</p>
                                <p class="font-bold">Status</p>
                                <p class="font-bold">Posted on</p>
                            </div>
                            <div>
                                 <p>@grievance.Title</p>
                                <p>@grievance.Status</p>
                                <p>@grievance.CreatedAt.ToString("MM/dd/yyyy")</p>
                            </div>
                        </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-gray-500">No grievances found.</div>
            }
        </div>
    </div>
</body>
</html>
