@model List<TimeLineEntry> 
@{
    ViewData["Title"] = "Grievance Status";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f4f6f9;
        }

        .head {
            background: linear-gradient(to right, #fd7e14, #fcb400);
            padding: 30px;
            color: white;
        }

            .head h1 {
                font-size: 2.5rem;
                text-align: center;
                font-weight: 700;
            }

        .card {
            border-radius: 15px;
        }

        .table {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                vertical-align: middle;
            }

        .form-control {
            border-radius: 10px;
        }

        .btn-get-details {
            border-radius: 10px;
        }

        .captcha-img {
            border-radius: 10px;
        }
    </style>
</head>

<body>
    <div class="min-vh-100">
        <div class="head">
            <h1>Grievance Status</h1>
        </div>

        <div class="container mt-5 w-75">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card p-4 shadow-lg">
                        <form method="post" action="@Url.Action("Status", "Grievance")">
                            <div class="row g-3">
                                <!-- Grievance No Input -->
                                <div class="col-md-6">
                                    <label for="grievanceNo" class="form-label fw-bold">Grievance No<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="grievanceNo" name="grievanceId" placeholder="Enter Grievance No" required>
                                </div>

                                <!-- Get Details Button -->
                                <div class="col-md-6 d-flex align-items-end">
                                    <button type="submit" class="btn btn-success w-100">Get Details</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <div class="row justify-content-center mt-5 ">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model)
                                    {
                                        <tr>
                                            <td>@entry.Date</td>
                                            <td>@entry.Work</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        @* else
        {
            <div class="alert alert-warning">
                No timeline found for the given Grievance ID.
            </div>
        } *@
    </div>
</body>

</html>
