@{
	Layout = "_Gov_Layout";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grievance Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <style>
        body {
          background-color: #f4f6f9;
        }

        .head {
          background: linear-gradient(to right, #fd7e14, #fcb400);
          padding: 30px;
          color: white;
        }

        .head h1 {
          font-size: 2.5rem;
          text-align: center;
          font-weight: 700;
        }

        .card {
          border-radius: 15px;
        }

        .table {
          border-radius: 15px;
          overflow: hidden;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
          vertical-align: middle;
        }

        .form-control {
          border-radius: 10px;
        }

        .btn-get-details {
          border-radius: 10px;
        }

        .captcha-img {
          border-radius: 10px;
        }
    </style>
</head>

<body>
    <div class="min-vh-100">
    <div class="head">
        <h1>Grievance Status</h1>
    </div>

        <div class="container mt-5 w-75">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card p-4 shadow-lg">
                        <div class="row g-3">
                            <!-- Grievance No Input -->
                            <div class="col-md-6">
                                <label for="grievanceNo" class="form-label fw-bold">Grievance No<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="grievanceNo" placeholder="Enter Grievance No">
                            </div>

                            <!-- Get Details Button -->
                            <div class="col-md-6 d-flex align-items-end">
                                <button class="btn btn-success w-100">Get Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="row justify-content-center mt-5 ">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-10-01</td>
                                    <td>FIR filed at the local police station.</td>
                                </tr>
                                <tr>
                                    <td>2024-10-02</td>
                                    <td>Case assigned to Officer John Doe.</td>
                                </tr>
                                <tr>
                                    <td>2024-10-03</td>
                                    <td>CCTV footage from nearby area collected.</td>
                                </tr>
                                <tr>
                                    <td>2024-10-04</td>
                                    <td>Statements from 3 witnesses documented.</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>

</html>
