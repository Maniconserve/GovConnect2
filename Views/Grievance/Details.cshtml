@model GrievanceDetailsViewModel

<head>
    <title>Grievance Details</title>
</head>

<div class="container mt-4 min-vh-100">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h2>Grievance Details</h2>
        </div>
        <div class="card-body">
            <h4 class="card-title">@Model.Grievance.Title</h4>
            <p class="text-muted">Posted on: @Model.Grievance.CreatedAt.ToString("MMMM dd, yyyy")</p>

            <hr />

            <div class="mb-3">
                <h5>Status:</h5>
                <p class="badge bg-primary">@Model.Grievance.Status</p>
            </div>

            <div class="mb-3">
                <h5>Department:</h5>
                <p>@Model.Grievance.GetDepartmentName()</p>
            </div>

            <div class="mb-3">
                <h5>Description:</h5>
                <p>@Model.Grievance.Description</p>
            </div>

            @if (Model.Files != null && Model.Files.Any())
            {
                <div class="mb-3">
                    <h5>Attached Files:</h5>
                    <ul>
                        @foreach (var file in Model.Files)
                        {
                            <li>
                                <strong>@file.FileName</strong>
                                <a href="@Url.Action("DownloadFile", "Grievance", new { id = Model.Grievance.GrievanceID, fileId = file.FileID })" class="btn btn-link">Download</a>
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <h5>Upload File:</h5>
                    <form method="post" enctype="multipart/form-data" asp-action="UploadFile" asp-route-id="@Model.Grievance.GrievanceID">
                        <input type="file" class="form-control" name="fileUpload" accept=".pdf"multiple />
                        <button type="submit" class="btn btn-primary mt-3">Upload File</button>
                    </form>
                </div>
            }

            <div class="mb-3">
                <h5>TimeLine:</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Work</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Grievance.GetTimeLine())
                        {
                            <tr>
                                <td>@item.Date.ToString("MMMM dd, yyyy")</td>
                                <td>@item.Work</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Grievance.Status == Status.Completed)
            {
                <div class="mb-3">
                    <h5>Add Reason:</h5>
                    <form asp-controller="Grievance" asp-action="AddTimeLineEntry" method="post">
                        <div class="mb-3">
                            <input type="date" class="form-control" id="Date" name="Date" required />
                        </div>
                        <div class="mb-3">
                            <label for="Work" class="form-label">Reason (For Not Completed)</label>
                            <input type="text" class="form-control" id="Work" name="Work" required />
                        </div>
                        <input type="hidden" name="GrievanceID" value="@Model.Grievance.GrievanceID" />
                        <button type="submit" class="btn btn-primary">Add Entry</button>
                    </form>
                </div>
            }

            <a href="@Url.Action("MyGrievances", "Grievance")" class="btn btn-success mt-3">Back to My Grievances</a>
        </div>
    </div>
</div>
