@{
    Layout = "_Gov_Layout";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container text-center mt-5" style="margin-bottom:98px;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-5 shadow-lg">
                    <div class="card-body">
                        <h1 class="display-4 text-danger">
                            Oops! 404 - Page Not Found
                        </h1>
                        <p class="lead">Sorry, the page you are looking for does not exist.</p>
                        <p>
                            You may want to check the URL or go back to the homepage.
                        </p>
                        <a asp-controller="Scheme" asp-action="Index" class="btn btn-primary">Go to Homepage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
