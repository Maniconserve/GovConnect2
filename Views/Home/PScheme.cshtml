@model GovConnect.Models.Scheme

@{
    Layout = "_Gov_Layout";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheme Details - Andhra Pradesh</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <div class="bg-light p-5 mb-5 container shadow rounded w-auto">
        <h1 class="text-2xl font-weight-bold mb-4">Scheme Details</h1>
        <p class="text-muted mb-4">Andhra Pradesh</p>

        <!-- Tags (if applicable, you can customize based on the scheme) -->
        <div class="mb-5">
            <span class="badge bg-success">Empowerment</span>
            <span class="badge bg-success">Differently Abled</span>
        </div>

        <!-- Scheme Details Section -->
        <h2 class="h4 font-weight-bold mb-2">Details</h2>
        <p class="text-muted mb-4">@Model.Details</p>

        <!-- Eligibility Section -->
        <h2 class="h4 font-weight-bold mb-2">Eligibility</h2>
        <pre class="text-muted mb-4">@Model.Eligibility</pre>

        <!-- Application Process Section -->
        <h2 class="h4 font-weight-bold mb-2">Application Process</h2>
        <pre class="text-muted mb-4">@Model.ApplicationProcess</pre>

        <!-- Documents Required Section -->
        <h2 class="h4 font-weight-bold mb-2">Documents Required <i class="fas fa-link"></i></h2>
        <pre class="text-muted mb-4">@Model.DocsRequired</pre>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
