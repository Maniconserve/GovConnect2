@model IEnumerable<Scheme>
<head>
    <title>Schemes you are eligible for</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="max-w-4xl mx-auto py-10 ">
        <h1 class="text-2xl font-semibold text-center mb-8">Schemes you are eligible for</h1>

        @if (Model != null && Model.Any())
        {
            foreach (var scheme in Model)
            {
                <div class="bg-white p-6 w-100 rounded-lg shadow mb-6">
                    <a href="@Url.Action("PScheme", "Scheme", new { schemeId = scheme.SchemeID })" class="text-blue-600 hover:text-blue-700">
                        @scheme.SchemeName
                    </a>
                    <p class="text-gray-600 mb-2">Andhra Pradesh</p>
                    <p class="text-gray-600 mb-2">@scheme.Details</p> <!-- Scheme details -->
                    
                    <!-- Attributes display -->
                    @if (!string.IsNullOrEmpty(scheme.Attributes))
                    {
                        <div class="flex space-x-2 mt-4">
                            @foreach (var attribut in scheme.Attributes.Split(','))
                            {
                                <span class="bg-green-100 text-green-800 text-sm font-medium px-2.5 py-0.5 rounded">
                                    @attribut
                                </span>
                            }
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="bg-white p-6 rounded-lg shadow mb-6">
                <p class="text-gray-600">No schemes available for your eligibility criteria.</p>
            </div>
        }
    </div>
</body>

