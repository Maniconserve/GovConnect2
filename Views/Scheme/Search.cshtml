@model Eligibility
<head>
	<title>Schemes</title>
	<link href="~/css/search.css" rel="stylesheet" />
</head>
<div class="container mt-5 mb-5">
	<div class="p-4 mx-auto" style="max-width: 600px;">
		<h2 class="text-center mb-4">Help us find the best schemes for you</h2>

		<form asp-action="Search" method="post">
			<div class="mb-3">
				<label class="form-label">
					<span class="text-danger">*</span> Tell us about yourself, you are a...
				</label>
				<div class="btn-group w-100" role="group" id="gender-options">
					<input type="radio" class="btn-check" name="Gender" id="male" value="Male" asp-for="Gender" autocomplete="off">
					<label class="btn btn-outline-secondary w-100 d-flex flex-column align-items-center" for="male">
						<i class="fas fa-mars mb-2"></i> Male
					</label>

					<input type="radio" class="btn-check" name="Gender" id="female" value="Female" asp-for="Gender" autocomplete="off">
					<label class="btn btn-outline-secondary w-100 d-flex flex-column align-items-center" for="female">
						<i class="fas fa-venus mb-2"></i> Female
					</label>

					<input type="radio" class="btn-check" name="Gender" id="transgender" value="Transgender" asp-for="Gender" autocomplete="off">
					<label class="btn btn-outline-secondary w-100 d-flex flex-column align-items-center" for="transgender">
						<i class="fas fa-transgender-alt mb-2"></i> Transgender
					</label>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label">
					<span class="text-danger">*</span> and your age is
				</label>
				<div class="d-flex align-items-center">
					<input type="number" class="form-control w-25" placeholder="Enter age" min="1" max="120" asp-for="Age">
					<span class="ms-2">years</span>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label">
					<span class="text-danger">*</span> You belong to...
				</label>
				<div class="list-group" id="caste-options">
					<input type="radio" class="btn-check" name="Caste" id="general" value="General" asp-for="Caste" autocomplete="off">
					<label class="list-group-item list-group-item-action" for="general">
						General
					</label>

					<input type="radio" class="btn-check" name="Caste" id="obc" value="OBC" asp-for="Caste" autocomplete="off">
					<label class="list-group-item list-group-item-action" for="obc">
						Other Backward Class (OBC)
					</label>

					<input type="radio" class="btn-check" name="Caste" id="pvtg" value="PVTG" asp-for="Caste" autocomplete="off">
					<label class="list-group-item list-group-item-action" for="pvtg">
						Particularly Vulnerable Tribal Group (PVTG)
					</label>

					<input type="radio" class="btn-check" name="Caste" id="sc" value="SC" asp-for="Caste" autocomplete="off">
					<label class="list-group-item list-group-item-action" for="sc">
						Scheduled Caste (SC)
					</label>

					<input type="radio" class="btn-check" name="Caste" id="st" value="ST" asp-for="Caste" autocomplete="off">
					<label class="list-group-item list-group-item-action" for="st">
						Scheduled Tribe (ST)
					</label>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label">
					<span class="text-danger">*</span> Are you differently abled?
				</label>
				<div class="btn-group w-100" role="group" id="differently-abled-options">
					<input type="radio" class="btn-check" name="IsDifferentlyAbled" id="yesD" value="true" asp-for="IsDifferentlyAbled" autocomplete="off">
					<label class="btn btn-outline-secondary w-50" for="yesD">
						Yes
					</label>
					<input type="radio" class="btn-check" name="IsDifferentlyAbled" id="noD" value="false" asp-for="IsDifferentlyAbled" autocomplete="off">
					<label class="btn btn-outline-secondary w-50" for="noD">
						No
					</label>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label">
					<span class="text-danger">*</span> Are you a student?
				</label>
				<div class="btn-group w-100" role="group" id="student-options">
					<input type="radio" class="btn-check" name="IsStudent" id="yesS" value="true" asp-for="IsStudent" autocomplete="off">
					<label class="btn btn-outline-secondary w-50" for="yesS">
						Yes
					</label>
					<input type="radio" class="btn-check" name="IsStudent" id="noS" value="false" asp-for="IsStudent" autocomplete="off">
					<label class="btn btn-outline-secondary w-50" for="noS">
						No
					</label>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label">
					<span class="text-danger">*</span> Do you belong to BPL category?
				</label>
				<div class="btn-group w-100" role="group" id="bpl-options">
					<input type="radio" class="btn-check" name="IsBPL" id="yesBPL" value="true" asp-for="IsBPL" autocomplete="off">
					<label class="btn btn-outline-secondary w-50" for="yesBPL">
						Yes
					</label>
					<input type="radio" class="btn-check" name="IsBPL" id="noBPL" value="false" asp-for="IsBPL" autocomplete="off">
					<label class="btn btn-outline-secondary w-50" for="noBPL">
						No
					</label>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-success w-100">
					Submit <i class="fas fa-arrow-right"></i>
				</button>
			</div>
		</form>
	</div>
</div>
