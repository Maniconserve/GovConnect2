@model PostOfficeResponse

@{
    ViewData["Title"] = "Post Office Details";
}

<h2>Post Office Details</h2>

@if (Model != null && Model.PostOffice.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Branch Type</th>
                <th>Delivery Status</th>
                <th>District</th>
                <th>State</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var postOffice in Model.PostOffice)
            {
                <tr>
                    <td>@postOffice.Name</td>
                    <td>@postOffice.BranchType</td>
                    <td>@postOffice.DeliveryStatus</td>
                    <td>@postOffice.District</td>
                    <td>@postOffice.State</td>
                    <td>@postOffice.Country</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        No post office data found for the entered PIN code.
    </div>
}
