@{
    Layout = "_Gov_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-light p-5">

    <!-- Main container -->
    <div class="container max-w-4xl mx-auto">

        <!-- Heading and filter section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5 font-weight-bold text-primary">My Services</h1>
            <div>
                <select class="form-select w-auto" aria-label="Filter status">
                    <option value="1">In Progress</option>
                    <option value="2">Completed</option>
                    <option value="3">Pending</option>
                </select>
            </div>
        </div>

        <!-- Service cards -->
        <div class="row g-4">
            <!-- Service card 1 -->
            <div class="col-md-4">
                <div class="card shadow-sm border-light rounded-lg">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Household Card Purpose</h5>
                        <p class="card-text"><strong>Status:</strong> In Progress</p>
                        <p class="card-text"><strong>Applied on:</strong> 10/09/2024</p>
                        <button class="btn btn-warning w-100 mt-3">Withdraw</button>
                    </div>
                </div>
            </div>

            <!-- Service card 2 -->
            <div class="col-md-4">
                <div class="card shadow-sm border-light rounded-lg">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Household Card Purpose</h5>
                        <p class="card-text"><strong>Status:</strong> In Progress</p>
                        <p class="card-text"><strong>Applied on:</strong> 10/09/2024</p>
                        <button class="btn btn-warning w-100 mt-3">Withdraw</button>
                    </div>
                </div>
            </div>

            <!-- Service card 3 -->
            <div class="col-md-4">
                <div class="card shadow-sm border-light rounded-lg">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Household Card Purpose</h5>
                        <p class="card-text"><strong>Status:</strong> In Progress</p>
                        <p class="card-text"><strong>Applied on:</strong> 10/09/2024</p>
                        <button class="btn btn-warning w-100 mt-3">Withdraw</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery (Optional for Bootstrap components that require JavaScript) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
