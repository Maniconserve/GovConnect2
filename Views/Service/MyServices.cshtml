@model IEnumerable<ServiceApplication>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-light p-5">

    <!-- Main container -->
    <div class="container max-w-4xl mx-auto vh-100">

        <!-- Heading and filter section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5 font-weight-bold text-primary">My Services</h1>
            <div>
                <!-- Filter status dropdown -->
                <form method="get" action="@Url.Action("MyServices", "Service")">
                    <div class="mb-4 d-flex justify-content-end">
                        <select id="statusFilter" name="statusFilter" class="form-select w-auto" aria-label="Filter status">
                            <option value="None" >None</option>
                            <option value="All">All</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Pending">Pending</option>
                            <option value="Completed">Completed</option>
                            <option value="Withdrawn">Withdrawn</option>
                        </select>
                    </div>
                </form>

            </div>
        </div>
        <!-- Service cards -->
        <div class="row g-4">
            @foreach (var service in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm border-light rounded-lg">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@service.ServiceName</h5> <!-- Display the Service Name -->
                            <p class="card-text"><strong>Status:</strong> @service.Status</p>
                            <p class="card-text"><strong>Applied on:</strong> @service.ApplicationDate.ToString("dd MMM yyyy")</p>

                            <!-- Show Withdraw button only for services that are not completed or withdrawn -->
                            @if (service.Status != "Completed" && service.Status != "Withdrawn")
                            {
                                <button class="btn btn-warning w-100 mt-3" onclick="location.href='@Url.Action("Withdraw", "Service", new { id = service.ApplicationID })'">Withdraw</button>
                            }
                            else
                            {
                                <button class="btn btn-warning w-100 mt-3" disabled>Withdraw</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        // Add an event listener for the 'change' event on the select element
        document.getElementById('statusFilter').addEventListener('change', function () {
            var form = this.closest('form');  // Get the parent form
            form.submit();  // Submit the form when the user selects a new option
        });
    </script>
</body>
</html>
