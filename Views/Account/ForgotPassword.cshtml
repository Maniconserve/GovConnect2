@{
    Layout = "_Gov_Layout";  // Use the same layout
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome CDN for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="bg-white rounded-lg shadow-lg p-4 w-100" style="max-width: 500px;">
        <!-- Form Starts Here -->
        <form asp-action="SendOtp" method="post">
            <!-- Email Field -->
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email" aria-label="Email" required value="@ViewBag.Email">
                    <!-- Change button type to submit -->
                    <button class="btn btn-outline-secondary" type="submit">Send OTP</button>
                </div>
                <!-- Display TempData message after form submission -->
                @if (TempData["OtpMessage"] != null)
                {
                    <div class="alert alert-info mt-2">
                        @TempData["OtpMessage"]
                    </div>
                }
            </div>
        </form>

        <!-- OTP & Password Form -->
        <form asp-action="VerifyOtp" method="post">
            <!-- OTP Field -->
            <div class="mb-3">
                <input type="hidden" name="Email" value="@ViewBag.Email" />
                <label for="OTP" class="form-label">OTP</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                    <input type="text" class="form-control" id="OTP" name="OTP" placeholder="Enter OTP" aria-label="OTP" required>
                </div>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" aria-label="Password" required>
                </div>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" aria-label="Confirm Password" required>
                </div>
            </div>

            <!-- Login Button -->
            <div class="d-flex justify-content-center mb-4">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
        </form>
    </div>
    </div>


    <!-- Bootstrap JS (without Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
