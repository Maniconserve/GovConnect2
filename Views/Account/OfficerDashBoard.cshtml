@{
	Layout = "_Gov_Layout";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        .profile-header {
          background-color: #f9f9f9;
          padding: 20px;
          border-radius: 10px;
        }

        .profile-img {
          border-radius: 50%;
          width: 100px;
          height: 100px;
        }

        .card-header {
          background-color: #ffcc00;
          color: #fff;
          font-weight: bold;
        }

        .card-body {
          background-color: #f7f7f7;
        }

        .status-in-progress {
          color: #f39c12;
          font-weight: bold;
        }

        .status-completed {
          color: #2ecc71;
          font-weight: bold;
        }

        .status-pending {
          color: #e74c3c;
          font-weight: bold;
        }

        .case-title {
          color: #3498db;
        }

        .case-info {
          color: #7f8c8d;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container mt-5">
        <!-- Profile Section -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="profile-header shadow-lg mb-4">
                    <div class="d-flex align-items-center">
                        <img src="https://storage.googleapis.com/a1aa/image/me9IHARyK0wiGSkGpEDqqvFK0CYDv0E7vkNuez9lfwURbAnnA.jpg" alt="Image of Hariprasad" class="profile-img" />
                        <div class="ms-4">
                            <h1 class="h3">Hariprasad</h1>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fas fa-id-badge text-primary"></i>
                                <span class="ms-2">DSP</span>
                                <i class="fas fa-envelope ms-4 text-danger"></i>
                                <span class="ms-2">Hari@gmail.com</span>
                                <i class="fas fa-location-arrow ms-4 text-success"></i>
                                <span class="ms-2">Hyderabad</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cases Section -->
        <h2 class="h4 text-primary mb-3">Cases</h2>

        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                Case #1
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="fw-bold case-title">Title:</span>
                    <span class="case-info">Mobile Phone Theft Case Reported Near Madhapur</span>
                </div>
                <div class="mb-3">
                    <span class="fw-bold">Status:</span>
                    <span class="status-in-progress">In Progress</span>
                </div>
                <div>
                    <span class="fw-bold">Posted on:</span>
                    <span class="case-info">12/10/2024</span>
                </div>
            </div>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                Case #2
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="fw-bold case-title">Title:</span>
                    <span class="case-info">Mobile Phone Theft Case Reported Near Madhapur</span>
                </div>
                <div class="mb-3">
                    <span class="fw-bold">Status:</span>
                    <span class="status-in-progress">In Progress</span>
                </div>
                <div>
                    <span class="fw-bold">Posted on:</span>
                    <span class="case-info">12/10/2024</span>
                </div>
            </div>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                Case #3
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="fw-bold case-title">Title:</span>
                    <span class="case-info">Mobile Phone Theft Case Reported Near Madhapur</span>
                </div>
                <div class="mb-3">
                    <span class="fw-bold">Status:</span>
                    <span class="status-completed">Completed</span>
                </div>
                <div>
                    <span class="fw-bold">Posted on:</span>
                    <span class="case-info">12/10/2024</span>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
